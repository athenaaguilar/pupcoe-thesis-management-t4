<head>
  <title>CpERMS | Guest Panel</title>
  <!-- LOCAL -->
  <link rel="stylesheet" type="text/css" href="../css/style.css">
</head>

{{> header_admin }}

<!--admin guest panel-->
<div class="d-flex justify-content-center small">
  <div class= "well well-width">
    <div class="container">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-12 col-sm-12">
          <h4>Guest Panel</h4>
          <hr class="botm-line">
          <form method="post" action="/students/settings">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr class="info center">
                  <th  style="width: 15%">Number</th>
                  <th>Name</th>
                  <th  style="width: 20%">Action</th>
                </tr>
              </thead>
              <tbody>
                <tr class="center">
                  <td>1</td>
                  <td></td>
                  <td>
                    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#update"><i class="fa fa-eye"></i></button>
                    <button type="button" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                  </td>
                  </tr>
              </tbody>
            </table>
          </form>
        </div>
      </div><!--section_1-->
    </div><!--tab content-->
  </div><!--well-->
</div><!--row-->
<!--admin guest panel-->

<!--MODAL-FORM update-->
<div class="modal fade small" id="update" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><strong> Guest Panel Name</strong></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          Name
          <div class="form-group">
             <input type="text" name="name" class="form-control" value="Name from Database" placeholder="Your name here" disabled>
          </div>
          Contact Number
          <div class="form-group">
             <input type="text" name="contacts" class="form-control" value="Contact Number from Database" placeholder="Your contact number here" disabled>
          </div>
          Email Address
          <div class="form-group">
             <input type="text" name="email" class="form-control" value="Email Address from Database" placeholder="Your email address here" disabled>
          </div>
          Username
          <div class="form-group">
             <input type="text" name="username" class="form-control" value="Username from Database" placeholder="Your username here" disabled>
          </div>
          Password
          <div class="input-group">
             <input id="password_field" type="password" name="password" class="form-control" value="Password from Database" placeholder="Your password here" disabled>
             <div class="input-group-addon">
              <span toggle="#password_field" class="fa fa-fw fa-eye see-pw toggle-password"></span>
             </div>
          </div>
          <div class="pull-right">
            <br>
            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{> footer }}

<script type="text/javascript" src="../../js/seepassword.js"></script>
