<!--admin students-->

<!--MODAL-FORM update-->
<div class="modal fade small" id="update" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><strong> Username</strong></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="post" action="/students/settings">
          <div class="form-group">
            Class
            <div class="form-group">
               <select style="height: 2.5em" class="form-control" name="class" class="form-control" value="" required>
                  <option value ="1">1</option>
                  <option value ="2">2</option>
                  <option value ="3">3</option>
                  <option value ="4">4</option>
                  <option value ="5">5</option>
               </select>
            </div>
            Username
            <div class="form-group">
               <input type="text" name="username" class="form-control" value="Username from Database" placeholder="Your username here" disabled>
            </div>
            Password
            <div class="input-group">
               <input id="password_field" type="password" name="password" class="form-control" value="Password from Database" placeholder="Your password here" disabled>
               <div class="input-group-addon">
                <span toggle="#password_field" class="fa fa-fw fa-eye see-pw toggle-password"></span>
               </div>
            </div>
            <br>
            <h5>Members</h5>
            <table class="table table-striped">
              <thead>
                <tr class="info">
                  <th>Number</th>
                  <th>Member</th>
                  <th>Contact Number</th>
                  <th>Email Address</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>1</td>
                  <td></td>
                  <td></td>
                  <td></td>
                </tr>
              </tbody>
            </table>
            <div class="pull-right">
              <br>
              <button type="submit" class="btn btn-success btn-sm" data-dismiss="modal">Update</button>
            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

